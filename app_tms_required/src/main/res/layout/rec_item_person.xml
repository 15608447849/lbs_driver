<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/rec_item_card_view_style"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_base_click_ripple"
        android:padding="@dimen/dp5">
        <ImageView
            android:id="@+id/rec_item_person_iv"
            style="@style/wrap_wrap"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_rec_item_personal_logout"
            />
        <TextView
            android:id="@+id/rec_item_person_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp10"
            android:layout_toRightOf="@id/rec_item_person_iv"
            style="@style/rec_item_person_text_style1"
            android:text="订单管理"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_rec_item_personal_right_arrow"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>
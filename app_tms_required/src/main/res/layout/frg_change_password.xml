<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">
    <LinearLayout style="@style/frg_change_password_layout">
        <TextView
            style="@style/frg_change_password_layout_tv"
            android:text="原始密码"
            />
        <EditText
            android:id="@+id/frg_change_password_et_original"
            style="@style/frg_change_password_layout_et"
            />
    </LinearLayout>
    <LinearLayout
        style="@style/frg_change_password_layout">
        <TextView
            style="@style/frg_change_password_layout_tv"
            android:text="新  密  码"
            />
        <EditText
            android:id="@+id/frg_change_password_et_new"
            style="@style/frg_change_password_layout_et"
            />
    </LinearLayout>
    <LinearLayout
        style="@style/frg_change_password_layout">
        <TextView
            android:text="确认密码"
            style="@style/frg_change_password_layout_tv" />
        <EditText
            android:id="@+id/frg_change_password_et_sure"
            style="@style/frg_change_password_layout_et" />
    </LinearLayout>
    <Button
        android:id="@+id/frg_change_password_btn_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="完   成"
        android:layout_margin="@dimen/dp15"
        android:padding="@dimen/dp10"
        android:layout_gravity="center_horizontal"
        android:background="@android:drawable/btn_default_small"
        />
</LinearLayout>
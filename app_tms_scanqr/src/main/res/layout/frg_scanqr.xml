<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <cn.bingoogolapple.qrcode.zbar.ZBarView
        android:id="@+id/frg_scanqr_zbarview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:qrcv_verticalBias="0.3"
        app:qrcv_qrCodeTipText="将二维码/条码放入框内，即可自动扫描"
        app:qrcv_isShowTipTextAsSingleLine="true"
        app:qrcv_isOnlyDecodeScanBoxArea="true"
        app:qrcv_maskColor="#33333333"
        />

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        style="@style/CardView.Dark">
        <!--灯光按钮-->
        <ToggleButton
            android:id="@+id/frg_scanqr_btn_flash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_flash_switch_select"
            android:layout_margin="10dp"
            android:layout_centerInParent="true"
            android:textOff="@null"
            android:textOn="@null"
            android:minWidth="36dp"
            android:minHeight="36dp"
            />
    </android.support.v7.widget.CardView>


</RelativeLayout>
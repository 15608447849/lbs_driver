<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/frg_take_picture_fl_iv_1"
        style="@style/frg_take_picture_iv"
        app:layout_heightPercent="20%"
        app:layout_widthPercent="30%"
        android:src="@drawable/ic_picture_add"
         />

    <ImageView
        android:id="@+id/frg_take_picture_fl_iv_2"
        style="@style/frg_take_picture_iv"
        app:layout_heightPercent="20%"
        app:layout_widthPercent="30%"
        android:src="@drawable/ic_picture_add"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:id="@+id/frg_take_picture_fl_iv_3"
        style="@style/frg_take_picture_iv"
        app:layout_heightPercent="20%"
        app:layout_widthPercent="30%"
        android:src="@drawable/ic_picture_add"
        android:layout_toRightOf="@id/frg_take_picture_fl_iv_2"
        />

    <Button
        android:id="@+id/frg_take_picture_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认上传"
        android:layout_gravity="bottom|center"
        android:layout_below="@id/frg_take_picture_fl_iv_3"
        android:layout_centerHorizontal="true"
        />

</android.support.percent.PercentRelativeLayout>
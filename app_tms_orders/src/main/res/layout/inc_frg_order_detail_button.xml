<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="@dimen/dp5">

    <Button
        android:id="@+id/inc_frg_order_detail_btn_pickup"
        style="@style/inc_frg_order_detail_btn_style"
        android:text="取货"
        />

    <Button
        android:id="@+id/inc_frg_order_detail_btn_unload"
        style="@style/inc_frg_order_detail_btn_style"
        android:text="卸货"
        />

    <Button
        android:id="@+id/inc_frg_order_detail_btn_sign"
        style="@style/inc_frg_order_detail_btn_style"
        android:text="签收"
        />

</LinearLayout>